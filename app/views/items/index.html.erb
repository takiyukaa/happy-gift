<div class="container">

 <h1>Items</h1>
  <%= link_to "Add a new item", new_item_path, class: 'btn btn-warning' %>

  <% @items.each do |item| %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
        <h2><%= item.name %></h2>
        <p><%= item.category %></p>
        <p><%= item.price %> Euro</p>
      </div>
    </div>
  <% end %>
</div>
