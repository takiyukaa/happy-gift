<div class="container">
  <h1>Add a new item</h1>

  <%= simple_form_for @item do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: Item::CATEGORIES %>
    <%= f.input :price %>
    <%= f.input :vendor %>
    <%= f.submit class: 'btn btn-warning' %>
  <% end %>

  <%= link_to "Back", items_path, class: 'btn btn-light' %>
</div>
